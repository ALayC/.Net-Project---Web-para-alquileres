@model IEnumerable<MantenimientoModel>

@{
    ViewData["Title"] = "RegistroMantenimiento";
}

<h1>RegistroMantenimiento</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form method="post" asp-controller="Mantenimiento" asp-action="RegistroMantenimiento">
    <div class="form-group">
        <label for="id">ID:</label>
        <input type="number" name="id" class="form-control" placeholder="Número de Habitación">
    </div>
    <div class="form-group">
        <label for="fecha">Fecha:</label>
        <input type="date" name="fecha" class="form-control">
    </div>
    <div class="form-group">
        <label for="costo">Costo :</label>
        <input type="number" name="costo" class="form-control" placeholder="costo">
    </div>
    <div class="form-group">
        <label for="trabajador">Trabajador :</label>
        <input type="text" name="trabajador" class="form-control" placeholder="trabajador">
    </div>
    <div class="form-group">
        <label for="descripcion">Descripcion :</label>
        <input type="text" name="descripcion" class="form-control" placeholder="descripcion">
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

