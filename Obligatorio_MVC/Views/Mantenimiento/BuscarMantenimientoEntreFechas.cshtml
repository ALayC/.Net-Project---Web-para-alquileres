@model IEnumerable<MantenimientoModel>

@{
    ViewData["Title"] = "BuscarMantenimientoEntreFechas";
}

<h1>BuscarMantenimientoEntreFechas</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form method="post" asp-controller="Mantenimiento" asp-action="BuscarMantenimientoEntreFechas">
    <div class="form-group">
        <label for="id">ID:</label>
        <input type="number" name="id" class="form-control" placeholder="Número de Habitación">
    </div>
    <div class="form-group">
        <label for="fechaInicio">Fecha inicio:</label>
        <input type="date" name="fechaInicio" class="form-control">
    </div>
    <div class="form-group">
        <label for="fechaFin">Fecha fin:</label>
        <input type="date" name="fechaFin" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>



