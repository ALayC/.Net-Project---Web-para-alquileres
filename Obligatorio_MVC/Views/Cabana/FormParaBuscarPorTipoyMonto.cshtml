@model Obligatorio_MVC.Models.ParaBuscarPorTipoyMontoModel

<h1>FormParaBuscarPorTipoyMonto</h1>

<h4>CabanaModel</h4>
<hr />
<form method="post" asp-controller="Cabana" asp-action="BuscarPorTipoyMonto">
    <div class="form-group">
        <label for="tipo">Tipo:</label>
        <input type="text" name="tipo" class="form-control" placeholder="Tipo de cabana">
    </div>
    <div class="form-group">
        <label for="monto">Monto:</label>
        <input type="number" name="monto" class="form-control" placeholder="Monto">
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
